<%-include('./partials/header')%>
<%-include('./partials/nav')%>

<div class="bg-gray-100 py-12 flex justify-center">
    <div class="container mt-[100px] px-4 flex flex-col items-center">
        <h1 class="text-3xl font-bold mb-6">Seller Profile</h1>
        <div class="bg-white rounded-lg overflow-hidden shadow-md w-full max-w-md">
            <div class="p-6">
                <div class="flex flex-col">
