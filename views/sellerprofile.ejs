                        <p class="text-lg"><strong>Company Name:</strong> <%= seller.companyname %></p>
                    </div>
                    <div class="col-span-2 md:col-span-1">
                        <p class="text-lg"><strong>Email:</strong> <%= seller.email %></p>
                    </div>
                    <!-- Add more fields as needed -->
                </div>
            </div>
            <!-- Buttons section -->
            <div class="bg-gray-200 px-6 py-4 flex justify-end w-full">
                <a href="/update/<%=id%>" class="bg-blue-500 text-white py-2 px-4 rounded-md mr-2 hover:bg-blue-600">Update</a>
                <button class="bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600">Delete</button>
