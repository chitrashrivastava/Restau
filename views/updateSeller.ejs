<%-include("./partials/header")%>
<%-include("./partials/nav")%>

<div class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold mb-6">Update Seller Profile</h1>
        <div class="bg-white rounded-lg overflow-hidden shadow-md p-6">
            <form action="/update/<%= user._id %>" method="POST"> <!-- Updated form action -->
                <div class="mb-4">
                    <label for="name" class="block text-gray-700 font-bold mb-2">Name</label>
                    <input type="text" id="name" name="companyname" value="<%= user.companyname %>" class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Enter your name" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Enter your email" required>
                </div>
                <!-- Add more fields as needed -->
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%-include("./partials/footer")%>
